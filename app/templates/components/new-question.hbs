{{#if addNewQuestion}}
  <h3>New Question</h3>
  <form>
    <div class="form-group">
      <label for="author">Owner</label>
      {{input class="form-control" value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="content">Question Subject</label>
      {{input class="form-control" value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="details">Question Details</label>
      {{textarea class="form-control" value=details id="details"}}
    </div>
    <br>
    <button class="btn btn-xs btn-success" {{action 'saveQuestion1'}}>Save</button>
  </form>
{{else}}
  <button class="btn btn-xs btn-success" {{action "questionFormShow"}}>New Question</button>
{{/if}}
